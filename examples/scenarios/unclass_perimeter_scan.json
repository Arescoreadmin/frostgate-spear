      "services": ["http", "https"]
    },
    {
      "name": "ext-web-02.example.com",
      "type": "web_server",
      "network": "203.0.113.0/24",
      "ip": "203.0.113.11",
      "criticality": "medium",
      "services": ["http", "https"]
    },
    {
      "name": "ext-api-01.example.com",
      "type": "api_server",
      "network": "203.0.113.0/24",
      "ip": "203.0.113.20",
      "criticality": "high",
      "services": ["https"]
    },
    {
      "name": "ext-mail-01.example.com",
      "type": "mail_server",
      "network": "203.0.113.0/24",
