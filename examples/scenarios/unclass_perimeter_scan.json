      "criticality": "high",
      "services": ["smtp", "imap", "https"]
    }
  ],
  "kill_chain": [
    "reconnaissance"
  ],
  "phases": [
    {
      "phase_id": "phase-recon-001",
      "name": "Network Discovery",
      "type": "reconnaissance",
      "objective": "Identify live hosts and open ports on external perimeter",
      "actions": [
        {
          "action_id": "action-001",
          "type": "reconnaissance",
          "technique_id": "T1595",
          "tool": "nmap",
          "parameters": {
            "scan_type": "syn",
            "ports": "1-65535",
            "timing": "T3"
          },
          "target_scope": "all"
        },
        {
          "action_id": "action-002",
          "type": "reconnaissance",
          "technique_id": "T1592",
          "tool": "amass",
          "parameters": {
            "mode": "passive",
            "domain": "example.com"
          }
        }
      ]
    },
    {
      "phase_id": "phase-vuln-001",
      "name": "Vulnerability Scanning",
      "type": "vulnerability_scan",
      "objective": "Identify vulnerabilities in discovered services",
      "depends_on": ["phase-recon-001"],
      "actions": [
        {
          "action_id": "action-003",
          "type": "vulnerability_scan",
          "tool": "nuclei",
          "parameters": {
            "templates": "cves,exposed-panels,takeovers",
            "severity": "medium,high,critical"
          },
          "target_scope": "web_servers"
        },
        {
          "action_id": "action-004",
          "type": "vulnerability_scan",
          "tool": "nikto",
          "parameters": {
            "tuning": "1234"
          },
          "target_scope": "web_servers"
        }
      ]
    }
  ],
  "success_criteria": {
    "reconnaissance_complete": true,
